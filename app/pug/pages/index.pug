					ul.main-menu.main-menu--to-right
						li.main-menu__item
							a.main-menu__link(href='#') Blog
						li.main-menu__item
							a.main-menu__link(href='#') Elements
						li.main-menu__item
							a.main-menu__link(href='#') Shop
		section.general
			.wrapper-big
				.general-container
					.general-col.general-col--left
						.general-form
							form(action='#' method='post')
								p.general-form__name Trial Class
								input.general-form__field(type='text' name='name' placeholder='Enter your name')
								input.general-form__field(type='text' name='number' placeholder='Enter your phone')
								input.general-form__field(type='text' name='number' placeholder='Enter your phone')
								.general-form__btn-wrapper
									input.general-form__field.general-form__btn(type='submit' value='Try it')
					.general-col.general-col--right
						.general-info
							h1.general-header Just Balance your Mind & Body
							p.subtitle Create the healthy living for yourself
