		link(rel='stylesheet' type='text/css' href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700")
	body
		header#header.main-header
			.wrapper-header
				nav.main-nav.open-nav
					ul.main-menu
						li.main-menu__item
							a.main-menu__link(href='#') About us
						li.main-menu__item
