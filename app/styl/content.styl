//-------------- customization slick slider (start)



.slick-prev:before,
.slick-next:before
	opacity 1

.slick-prev:before
	content ''
	top 50%
	left 50%
	display block
	width 6px
	height 6px
	border 2px solid #5b6ceb
	border-width 0 2px 2px 0
	transform translateX(11px) rotate(135deg)

.slick-next:before
	content ''
	top 50%
	left 50%
	display block
	width 6px
	height 6px
	border 2px solid #5b6ceb
	border-width 0 2px 2px 0
	transform translateX(8px) rotate(-45deg)

.slick-prev
	left -50px

.slick-next
	right -50px

.slick-dotted.slick-slider
	margin-bottom 0

.slick-prev,
.slick-next
	width 30px
	height 30px
	border-radius 50%
	border 2px solid transparent
	background-color #fff
	box-shadow 6px 7px 13px 4px #c0c0c057

.slick-prev:hover,
.slick-next:hover
	outline none
	border 2px solid #5b6ceb

.slick-prev:focus,
.slick-next:focus
	outline none
	background-color #fff

.slick-dots
	transform translate(855px, -190px) rotate(90deg)

.slick-dots li
	top 0px
	padding 0
	margin 0 9px
	width 20px
	height 20px
	border-radius 50%
	border 2px solid #d7d7d7

	&:hover
		border-color #5b6ceb

.slick-dots li button:before
	content ''
	top 50%
	left 50%
	width 10px
	height 10px
	border-radius 50%
	background-color #5b6ceb
	transform translate(-50%, -50%)
	opacity 0

.slick-dots li.slick-active
	border-color #5b6ceb

.slick-dots li.slick-active button:before
	opacity 1

.about
	.slick-prev,
	.slick-next
		width 50px
		height 50px

	.slick-prev:before
