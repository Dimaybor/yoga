				transition all 0.4s
				cursor pointer

			img
				line-height 0
				width 100%
				height 100%

.gallery-hover
	position absolute
	top 0
	left 0
	display flex
	justify-content center
	align-items center
	width 100%
	height 100%
	background-color #7c89ef
	visibility hidden
	opacity 0.9

	&__search
		position relative
		width 57px
		height 57px
		border-radius 50%
		background-color #fff

		&::before
			content ''
			position absolute
			top 50%
			left 50%
			width 24px
			height 24px
			background url('../img/photo-hover.png') center no-repeat
			transform translate(-50%, -50%)

.about
