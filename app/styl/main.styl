	&-info
		display flex
		flex-direction column
		align-items center
		padding 30px 0
		width 100%

		&__item
			position relative
			height 62px
			font-size 18px
			line-height 62px
			color #555555
			text-transform uppercase

			&--line::after
				content ''
				position absolute
				bottom 0
				left 50%
				width 100px
				height 1px
				background-color #d7d7d7
				transform translateX(-50%)
	
	&-container
		position absolute
		bottom 50px
		left 50%
		width 170px
		transform translateX(-50%)

	&-container:hover + .shop-list__price
		background-color #2739c3
		transition all 0.3s

	&-button
		width 170px
		height 50px
		font-size 18px
		font-weight 600
		color #fff
		background-color #5b6ceb
		border none
		border-radius 20px
		outline none
		cursor pointer

		&:hover
			background-color #2739c3
			transition all 0.3s

.personnel
	position relative

.staff
