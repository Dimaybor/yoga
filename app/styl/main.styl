			left 36px

		&--last
			bottom 80px
			right -30px

	&-position
		margin-top 25px
		font-style normal

	&-name
		font-size 16px
		font-style normal
		font-weight 700
		color #5b6ceb

	&-nav
		position absolute
		bottom -36px
		left 314px
		max-width 185px
		height 72px

		&__item
			width 185px
		
		&__unit
			display flex
			justify-content center
			width 185px
			height 72px

		&__master
			margin-left 10px
			display flex
			flex-direction column
			justify-content center

		&__img 
			width 72px
			height 72px

		&__name
			font-weight 700

		&__position
			font-size 12px


//-------------- customization slick slider (start)


.slick-prev:before,
.slick-next:before
	opacity 1

.slick-prev:before
	content ''
	top 50%
	left 50%
	display block
	width 6px
	height 6px
	border 2px solid #5b6ceb
	border-width 0 2px 2px 0
	transform translateX(11px) rotate(135deg)

.slick-next:before
	content ''
	top 50%
	left 50%
	display block
	width 6px
	height 6px
	border 2px solid #5b6ceb
	border-width 0 2px 2px 0
	transform translateX(8px) rotate(-45deg)

.slick-prev
	left -50px

.slick-next
	right -50px

.slick-dotted.slick-slider
	margin-bottom 0

.slick-prev,
.slick-next
	width 30px
	height 30px
	border-radius 50%
	border 2px solid transparent
	background-color #fff
	box-shadow 6px 7px 13px 4px rgba(216, 214, 214, 0.702)

.slick-prev:hover,
.slick-next:hover
	outline none
	border 2px solid #5b6ceb

.slick-prev:focus,
.slick-next:focus
	outline none
	background-color #fff

.slick-dots
	transform translate(855px, -190px) rotate(90deg)

.slick-dots li
	top 0px
	padding 0
	margin 0 9px
	width 20px
	height 20px
	border-radius 50%
	border 2px solid #d7d7d7

	&:hover
		border-color #5b6ceb

.slick-dots li button:before
	content ''
	top 50%
	left 50%
	width 10px
	height 10px
	border-radius 50%
	background-color #5b6ceb
	transform translate(-50%, -50%)
	opacity 0

.slick-dots li.slick-active
	border-color #5b6ceb

.slick-dots li.slick-active button:before
	opacity 1


//-------------- customization slick slider (end)


