@media screen and (max-width: 1440px)

	.personnel
		.slick-dots
			transform translate(800px, -190px) rotate(90deg)

@media screen and (max-width: 1360px)

	.personnel
		.slick-dots
			transform translate(-435px, -190px) rotate(90deg)
	
	.shop-list
		flex-wrap wrap
		justify-content space-around

		&__item
			margin-bottom 40px

@media screen and (max-width: 1280px)

	.about
		&-container
			flex-direction column
			align-items center

		&-col
			text-align center

			& + &
				margin-top 70px

		&-text
			max-width none

	.shop 
		.wrapper-big
			padding 0 70px
			max-width 1920px
	
	.gallery-list
		justify-content center

		&__item
			width 300px

	.main-footer
		&__col
			padding 0 40px 50px

@media screen and (max-width: 1024px)

	.main-header
		margin 0
		width 100vw
		height 100px

	.open-nav
		position fixed
		left -100vw
		align-items flex-start
		margin-top 100px
		transition all 0.3s

		&--active
			transform translateX(100vw)

	.menu-open
		display block

	.main-menu
		flex-direction column
		min-width 50vw
		background-color #d1d6ff

		& + &
			margin-left 0
		
		&__item
			margin 0
			width 100%
			min-height 60px
			transition all 0.3s
		
		&__item + &__item
			margin-left 0
			
		&__link
			display flex
			justify-content center
			align-items center
			width 100%
			min-height 60px

			&:hover
				&::after
					width 30%
					height 1px
					background-color #5363db
					transform translate(-50%, -10px)
		
	.main-nav
		width 100%
		max-width 100%
		flex-direction column
	
	.elements-list
		&__item
			margin-top 25px

	.shop
		.wrapper-big
			padding 0 25px

		&-list
			flex-direction column
			flex-wrap nowrap
			justify-content flex-start
			align-items center

		&__item
			max-width 320px

			& + &
				margin-left 0
	.personnel 
		.slick-dots
			transform translate(-420px, -190px) rotate(90deg)

	.staff
		&-item
			&__container
				padding 35px
		
		&-description
			padding 0 10px 0 70px
		
		&-quotes
			font-size 45px

			&--first
				top 10px

			&--last
				bottom 20%
				right -20px

@media screen and (max-width: 768px)

	.classes-list
		&__item
			height auto
		
		&__img
			object-fit contain
			max-height 300px

		&__text
			padding 25px 20px 20px



